{
  "name": "ParzPOS",
  "version": "0.0.5",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:electron\"",
    "dev:frontend": "cd apps/front && npm run dev:frontend",
    "dev:electron": "wait-on http://localhost:5173 && node --watch --import=tsx launcher/dev.ts",
    "build-old": "tsc -p tsconfig.electron.json&& cp electron/preload.js dist-electron/preload.js  && electron-builder",
    "build": "npm run build:main && npm run build:renderer && electron-builder --publish never",
    "build:renderer": "cd apps/front && npm run build",
    "build:main": "tsc -p tsconfig.electron.json && cp electron/preload.js dist-electron/preload.js",
    "build:win": "npm run build:main && npm run build:renderer && electron-builder --win --x64 --publish never"
  },
  "build": {
    "appId": "com.parz.pos",
    "productName": "ParzPOS",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "dist-electron/**",
      "dist-renderer/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist-renderer",
        "to": "dist-renderer"
      },
      {
        "from": "electron/preload.js",
        "to": "preload.js"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icons"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ParzPOS"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "concurrently": "^8.2.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "tsx": "^4.20.3",
    "typescript": "^5.4.0",
    "wait-on": "^7.0.1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fontsource/roboto": "^5.2.6",
    "bwip-js": "^4.7.0",
    "canvas": "^3.2.0",
    "concurrently": "^9.2.0",
    "cryptr": "^6.3.0",
    "electron-squirrel-startup": "^1.0.1",
    "node-thermal-printer": "^4.5.0",
    "qrcode": "^1.5.4",
    "stripe": "^18.4.0",
    "uuid": "^11.1.0",
    "wait-on": "^8.0.3"
  }
}
